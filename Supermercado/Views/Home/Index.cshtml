<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Sistema Supermercado - Projeto BD</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <script src="script.js" defer></script>
</head>
<body>
    

    <main>
        <!-- Seção Fornecedores -->
        <section id="fornecedores" class="tab-section active">
            <h2>Cadastro de Fornecedores</h2>
            <form id="form-fornecedor" class="card">
                <div class="form-group">
                    <label for="nomeFornecedor">Nome do Fornecedor</label>
                    <input type="text" id="nomeFornecedor" required>
                </div>
                <div class="form-group">
                    <label for="contatoFornecedor">Telefone de Contato</label>
                    <input type="tel" id="contatoFornecedor" placeholder="(11) 99999-9999">
                </div>
                <div class="form-group">
                    <label for="endFornecedor">Endereço (CEP e número)</label>
                    <input type="text" id="endFornecedor" placeholder="CEP, número, complemento">
                </div>
                <button type="submit" class="btn primary">Salvar Fornecedor</button>
            </form>

            <h3>Lista de Fornecedores</h3>
            <div class="card">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Contato</th>
                            <th>Endereço</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody id="tabelaFornecedores"></tbody>
                </table>
            </div>
        </section>

        <!-- Seção Produtos -->
        <section id="produtos" class="tab-section">
            <h2>Cadastro de Produtos</h2>
            <form id="form-produto" class="card">
                <div class="form-group">
                    <label for="nomeProduto">Nome do Produto</label>
                    <input type="text" id="nomeProduto" required>
                </div>
                <div class="form-group">
                    <label for="categoriaProduto">Categoria</label>
                    <input type="text" id="categoriaProduto" placeholder="Hortifruti, Bebidas, Limpeza...">
                </div>
                <div class="form-group">
                    <label for="precoProduto">Preço (R$)</label>
                    <input type="number" id="precoProduto" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="estoqueProduto">Estoque</label>
                    <input type="number" id="estoqueProduto" min="0" required>
                </div>
                <div class="form-group">
                    <label for="fornecedorProduto">Fornecedor</label>
                    <select id="fornecedorProduto" required>
                        <option value="">Selecione um fornecedor</option>
                    </select>
                </div>
                <button type="submit" class="btn primary">Salvar Produto</button>
            </form>

            <h3>Lista de Produtos</h3>
            <div class="card">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Categoria</th>
                            <th>Preço</th>
                            <th>Estoque</th>
                            <th>Fornecedor</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody id="tabelaProdutos"></tbody>
                </table>
            </div>
        </section>

        <!-- Seção Clientes -->
        <section id="clientes" class="tab-section">
            <h2>Cadastro de Clientes</h2>
            <form id="form-cliente" class="card">
                <div class="form-group">
                    <label for="nomeCliente">Nome do Cliente</label>
                    <input type="text" id="nomeCliente" required>
                </div>
                <div class="form-group">
                    <label for="telefoneCliente">Telefone</label>
                    <input type="tel" id="telefoneCliente" placeholder="(11) 99999-9999">
                </div>
                <div class="form-group">
                    <label for="emailCliente">E-mail</label>
                    <input type="email" id="emailCliente" placeholder="cliente@email.com">
                </div>
                <button type="submit" class="btn primary">Salvar Cliente</button>
            </form>

            <h3>Lista de Clientes</h3>
            <div class="card">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Telefone</th>
                            <th>E-mail</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody id="tabelaClientes"></tbody>
                </table>
            </div>
        </section>

        <!-- Seção Vendas -->
        <section id="vendas" class="tab-section">
            <h2>Registro de Vendas</h2>
            <form id="form-venda" class="card">
                <div class="form-row">
                    <div class="form-group">
                        <label for="clienteVenda">Cliente</label>
                        <select id="clienteVenda" required>
                            <option value="">Selecione um cliente</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="dataVenda">Data e Hora</label>
                        <input type="datetime-local" id="dataVenda" required>
                    </div>
                </div>

                <hr>

                <h3>Itens da Venda</h3>
                <div class="form-row">
                    <div class="form-group">
                        <label for="produtoItem">Produto</label>
                        <select id="produtoItem">
                            <option value="">Selecione um produto</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="quantidadeItem">Quantidade</label>
                        <input type="number" id="quantidadeItem" min="1" value="1">
                    </div>
                    <button type="button" id="btnAddItem" class="btn secondary">Adicionar Item</button>
                </div>

                <div class="card sub-card">
                    <table>
                        <thead>
                            <tr>
                                <th>Produto</th>
                                <th>Qtd.</th>
                                <th>Preço Unit.</th>
                                <th>Subtotal</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody id="tabelaItensVenda"></tbody>
                    </table>
                    <div class="total-venda">
                        <span>Total da Venda: </span>
                        <strong id="valorTotalVenda">R$ 0,00</strong>
                    </div>
                </div>

                <button type="submit" class="btn primary">Salvar Venda</button>
            </form>

            <h3>Vendas Registradas</h3>
            <div class="card">
                <table>
                    <thead>
                        <tr>
                            <th>ID Venda</th>
                            <th>Cliente</th>
                            <th>Data</th>
                            <th>Valor Total</th>
                            <th>Qtd. Itens</th>
                        </tr>
                    </thead>
                    <tbody id="tabelaVendas"></tbody>
                </table>
            </div>
        </section>
    </main>
</body>
</html>